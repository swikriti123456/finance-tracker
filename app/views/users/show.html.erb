<h2>User Details</h2>



<div class="card card-header results-block">
	<table class="col-md-12">
		<tbody>
			
			<tr>
				<td><strong>Name: </strong><%= @user.full_name %></td>
				<td><strong>Email: </strong><%= @user.email %></td>
				<td>
					<% if current_user.not_friends_with?(@user.id) %>
						<%= link_to 'Follow Friend', freindships_path(friend: @user), class: 'btn btn-xs btn-success', method: :post %>
					<% else %>
						<span class="badge badge-secondary">
							you are already friend of him/her
						</span>
					<% end %>
				</td>
			</tr>
		
		</tbody>
	</table>
</div>
<% if !@tracked_stocks.empty? %>
	<%= render 'stocks/list' %>

<% else %>

<div>	<strong>This user is not tracking any stocks</strong>	</div>
<% end %>
